<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>ViewProfilePatientController</servlet-name>
        <servlet-class>controller.admin.ViewProfilePatientController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProfilePatientController</servlet-name>
        <servlet-class>controller.admin.EditProfilePatientController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditPatientProfileController</servlet-name>
        <servlet-class>controller.patient.EditPatientProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewProfileEmployeeController</servlet-name>
        <servlet-class>controller.admin.ViewProfileEmployeeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewPatientDetailController</servlet-name>
        <servlet-class>controller.admin.ViewPatientDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditPatientController</servlet-name>
        <servlet-class>controller.admin.EditPatientController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewServiceDetailController</servlet-name>
        <servlet-class>controller.admin.ViewServiceDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteServiceController</servlet-name>
        <servlet-class>controller.admin.DeleteServiceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoctorController</servlet-name>
        <servlet-class>controller.employee.DoctorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewProfilePatientController</servlet-name>
        <url-pattern>/patient/profile/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProfilePatientController</servlet-name>
        <url-pattern>/patient/profile/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditPatientProfileController</servlet-name>
        <url-pattern>/EditPatientProfileController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewProfileEmployeeController</servlet-name>
        <url-pattern>/employee/profile/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewPatientDetailController</servlet-name>
        <url-pattern>/patientDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditPatientController</servlet-name>
        <url-pattern>/editPatient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewServiceDetailController</servlet-name>
        <url-pattern>/serviceDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServiceController</servlet-name>
        <url-pattern>/delete-service</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoctorController</servlet-name>
        <url-pattern>/prescription</url-pattern>
    </servlet-mapping>
</web-app>
