<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>ViewProfilePatientController</servlet-name>
        <servlet-class>controller.patient.ViewProfilePatientController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProfilePatientController</servlet-name>
        <servlet-class>controller.patient.EditProfilePatientController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditPatientProfileController</servlet-name>
        <servlet-class>controller.patient.EditPatientProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProfileEmployeeController</servlet-name>
        <servlet-class>controller.employee.EditProfileEmployeeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewProfileEmployeeController</servlet-name>
        <servlet-class>controller.employee.ViewProfileEmployeeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewProfilePatientController</servlet-name>
        <url-pattern>/patient/profile/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProfilePatientController</servlet-name>
        <url-pattern>/patient/profile/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditPatientProfileController</servlet-name>
        <url-pattern>/EditPatientProfileController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProfileEmployeeController</servlet-name>
        <url-pattern>/employee/profile/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewProfileEmployeeController</servlet-name>
        <url-pattern>/employee/profile/view</url-pattern>
    </servlet-mapping>
</web-app>
